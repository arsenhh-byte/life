<?xml version="1.0" encoding="utf-8"?>


<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".select.SelectCategory"
        >




        <TextView
            android:id="@+id/textView3"
            android:layout_width="280dp"
            android:layout_height="24dp"
            android:layout_marginTop="32dp"
            android:text="Get started by choosing your interests."
            android:textAlignment="center"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.286"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/Recipes"
            android:layout_width="159dp"
            android:layout_height="277dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/roundstyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/roundrecipe" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:srcCompat="@drawable/roundkale" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Recipes"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/Recipes"
            app:layout_constraintHorizontal_bias="0.462"
            app:layout_constraintStart_toStartOf="@+id/Recipes"
            app:layout_constraintTop_toBottomOf="@+id/Recipes" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="60dp"
            android:layout_height="19dp"
            android:layout_marginTop="4dp"
            android:text="Routines"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/Routines"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="@+id/Routines"
            app:layout_constraintTop_toBottomOf="@+id/Routines" />

        <ImageView
            android:id="@+id/Routines"
            android:layout_width="133dp"
            android:layout_height="220dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/Recipes"
            app:layout_constraintHorizontal_bias="0.335"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.221"
            app:srcCompat="@drawable/roundproductivity" />

        <ImageView
            android:id="@+id/Mindfulness"
            android:layout_width="159dp"
            android:layout_height="277dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Recipes"
            app:srcCompat="@drawable/roundmindfulness" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Mindfulness"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/Mindfulness"
            app:layout_constraintHorizontal_bias="0.437"
            app:layout_constraintStart_toStartOf="@+id/Mindfulness"
            app:layout_constraintTop_toBottomOf="@+id/Mindfulness" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="What's New"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/Whatsnew"
            app:layout_constraintStart_toStartOf="@+id/Whatsnew"
            app:layout_constraintTop_toBottomOf="@+id/Whatsnew" />

        <ImageView
            android:id="@+id/Whatsnew"
            android:layout_width="133dp"
            android:layout_height="220dp"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toStartOf="@+id/Mindfulness"
            app:layout_constraintHorizontal_bias="0.335"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Routines"
            app:srcCompat="@drawable/roundwhatsnew" />

        <TextView
            android:id="@+id/pick5"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:text="@string/pickfive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_continue"
            android:background="@drawable/roundstyle"
            android:layout_width="349dp"
            android:layout_height="41dp"
            android:layout_marginStart="206dp"
            android:layout_marginEnd="195dp"
            android:layout_marginBottom="25dp"
            android:text="Continue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!--</ScrollView>-->



    </androidx.constraintlayout.widget.ConstraintLayout>





</ScrollView>

