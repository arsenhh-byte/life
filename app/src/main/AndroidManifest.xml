        <activity android:name=".navdrawer.Profile"></activity>
        <activity android:name=".menus.BottomNavigationActivity" />
        <activity android:name=".menus.NavigationDrawerActivity" />
        <activity android:name=".screens.InboxActivity" />
        <activity android:name=".screens.EmergencyActivity" />
        <activity android:name=".screens.TrackActivity" />
        <activity android:name=".screens.ExploreActivity" />
        <activity android:name=".screens.HomeActivity" />
        <activity android:name=".authenticate.ForgotPassword" />
        <activity android:name=".authenticate.Login" />
        <activity android:name=".authenticate.SignUp" />
        <activity android:name=".welcome.OnboardingScreen" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>